bindsym $mod+j exec ~/.bin/scratchpad vivaldi-stable --allow-file-access-from-files --app=http://127.0.0.1:8000/

# Open Spotify
bindsym $mod+s exec ~/.bin/scratchpad spotify

# Open Blueman
bindsym $mod+b exec ~/.bin/scratchpad blueman-manager

# Open PulseEffects
bindsym $mod+p exec ~/.bin/scratchpad pulseeffects

# Open terminal
bindsym $mod+Return exec ~/.bin/scratchpad i3-sensible-terminal

# Open Slack
bindsym $mod+Shift+s exec ~/.bin/scratchpad slack


