# -- clipboard -----------------------------------------------------------------

# in copy mode, copying selection also copies to the OS clipboard
#   - true
#   - false (default)
# on macOS, this requires installing reattach-to-user-namespace, see README.md
# on Linux, this requires xsel or xclip
tmux_conf_copy_to_os_clipboard=true


# -- user customizations -------------------------------------------------------
# this is the place to override or undo settings

# increase history size
set -g history-limit 20000

# start with mouse mode enabled
set -g mouse on

# force Vi mode
#   really you should export VISUAL or EDITOR environment variable, see manual
#set -g status-keys vi
#set -g mode-keys vi

# replace C-b by C-a instead of using both prefixes
# set -gu prefix2
# unbind C-a
# unbind C-b
# set -g prefix C-a
# bind C-a send-prefix

# move status line to top
set -g status-position top

unbind C-Left
unbind C-Right
unbind C-Up
unbind C-Down

bind-key left select-pane -L
bind-key right select-pane -R
bind-key up select-pane -U
bind-key down select-pane -D

bind-key S-left select-pane -L \; swap-pane -s '!'
bind-key S-right select-pane -R \; swap-pane -s '!'
bind-key S-up swap-pane -U
bind-key S-down swap-pane -D

bind-key -n C-M-left select-pane -L
bind-key -n C-M-right select-pane -R
bind-key -n C-M-up select-pane -U
bind-key -n C-M-down select-pane -D

bind-key -n C-M-S-left select-pane -L \; swap-pane -s '!'
bind-key -n C-M-S-right select-pane -R \; swap-pane -s '!'
bind-key -n C-M-S-up swap-pane -U
bind-key -n C-M-S-down swap-pane -D

set-window-option -g xterm-keys on
set -g terminal-overrides "xterm*:kLFT5=\eOD:kRIT5=\eOC:kUP5=\eOA:kDN5=\eOB:smkx@:rmkx@"
set -g terminal-overrides "screen*:kLFT5=\eOD:kRIT5=\eOC:kUP5=\eOA:kDN5=\eOB:smkx@:rmkx@"

#set -g default-terminal "screen-256color-bce"

bind-key -n C-v run "tmux set-buffer \"$(xclip -o -sel clipboard)\"; tmux paste-buffer"

bind-key -n C-Tab next-window
bind-key -n C-S-Tab previous-window
bind-key -n C-t new-window
bind-key -n C-w confirm-before -p "kill-window #W? (y/n)" kill-window

bind-key -n C-n new-session

bind-key a split-window -v "tmux list-sessions | sed -E 's/:.*$//' | grep -v \"^$(tmux display-message -p '#S')\$\" | fzf --reverse | xargs tmux switch-client -t"

bind-key -n C-Space resize-pane -Z

